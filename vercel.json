{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "img/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/verify/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.css|.*\\.js)",
      "dest": "/public/$1",
      "headers": {
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/public/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "/JOB2-main/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/JOB2-main/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "/",
      "dest": "backend/server.js"
    }
  ]
}
